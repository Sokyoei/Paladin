{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--no-debugger",
                // "--no-reload"
            ],
            "cwd": "${workspaceFolder}/flask_learn",
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "Python 调试程序: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/django_learn/manage.py"
        },
        {
            "name": "Python 调试程序: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/fastapi_learn",
            "jinja": true
        },
        {
            "name": "Python: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${fileDirname}"
        }
    ]
}
